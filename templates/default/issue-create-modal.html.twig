<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">捉到一个BUG</h4>
    </div>

    <div class="modal-body">
      <div class="issue-image-box"></div>


      <div class="issue-metas">
        <div class="issue-pri">
          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-warning btn-sm ">
              <input type="radio" name="options" id="option1" autocomplete="off" checked> 高
            </label>
            <label class="btn btn-primary btn-sm active">
              <input type="radio" name="options" id="option2" autocomplete="off"> 中
            </label>
            <label class="btn btn-info btn-sm">
              <input type="radio" name="options" id="option3" autocomplete="off"> 低
            </label>
          </div>
        </div>

        <div class="issue-note">
          <textarea name="note" class="form-control" rows="2" placeholder="输入BUG的备注信息"></textarea>
        </div>

      </div>

    </div>


    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
      <button type="button" class="btn btn-primary">创建</button>
    </div>

  </div>
</div>